root = true

[*]
end_of_line = lf

[*.{c,cpp,cxx,h,hpp,hxx}]
indent_style = space
indent_size = 4
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[{CMakeLists.txt,*.cmake.in,*.cmake}]
indent_style = space
indent_size = 2
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[{*.md,*.rst}]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
